\name{bias_correction}
\alias{bias_correction}
\title{
  Lag time correction for single collector measurements
}
\description{
  Correct the raw count ratios for the time difference between the
  different mass analyses.
}
\usage{
bias_correction(samp, aLm, ag, c64 = NULL)
}

\arguments{
  \item{samp}{
    one list item of a \code{simplex} object
  }
  \item{aLm}{
    the average logratio composition of a single spot, i.e. the output of \code{avg_Lm}
  }
  \item{ag}{
    a list containing a vector with parameters \eqn{\alpha_4} and
  \eqn{\gamma}, and its covariance matrix
  }
  \item{c64}{
    composition (\eqn{^206}Pb/\eqn{^206}Pb ratio) of the common Pb
  }
}
\value{
  a list containing a vector with the bias corrected logratio
  composition and its covariance matrix
}
\seealso{
  \code{\link{get_ag},\link{avg_Lm}}
}
\examples{
data(package="simplex")
samp <- Cameca[[1]]
Lm <- raw_count_ratios(samp=samp)
aLm <- avg_Lm(Lm)
ag <- get_ag(samp=samp,c64=c64)
out <- bias_correction(samp=samp,aLm=aLm,ag=ag)
}